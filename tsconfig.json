{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS", // Или CommonJS, если не используешь ESM
    "moduleResolution": "node10",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
